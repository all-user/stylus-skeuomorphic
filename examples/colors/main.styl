*
  box-sizing border-box

body
  background white
  text-align center

$h = 36px

gray-all = skeu-gray.chain-right-all
.gray
  { gray-all }
  border-right 1px solid #555

pink-all = skeu-pink.chain-all
.pink
  { pink-all }
  border-right 1px solid #555

purple-all = skeu-purple.chain-all
.purple
  { purple-all }
  border-right 1px solid #555

yellow-all = skeu-yellow.chain-all
.yellow
  { yellow-all }
  border-right 1px solid #555

green-all = skeu-green.chain-all
.green
  { green-all }
  border-right 1px solid #555

blue-all = skeu-blue.chain-all
.blue
  { blue-all }
  border-right 1px solid #555

red-all = skeu-red.chain-left-all
.red
  { red-all }

.skeu
  display inline-block
  size auto $h
  font-size 16px
  line-height 16px
  font-weight 400
  padding 10px 10px
  margin 10px 0
  font-family "Helvetica Neue", sans-serif
