body
  background white
  text-align center

.gray
  @extend $gray_skeu_chain_r
  border-right 1px solid #555
  &:hover
    @extend $gray_skeu_chain_r_hover
  &:active
    @extend $gray_skeu_active

.pink
  @extend $pink_skeu_chain
  border-right 1px solid #555
  &:hover
    @extend $pink_skeu_chain_hover
  &:active
    @extend $pink_skeu_active

.purple
  @extend $purple_skeu_chain
  border-right 1px solid #555
  &:hover
    @extend $purple_skeu_chain_hover
  &:active
    @extend $purple_skeu_active

.yellow
  @extend $yellow_skeu_chain
  border-right 1px solid #555
  &:hover
    @extend $yellow_skeu_chain_hover
  &:active
    @extend $yellow_skeu_active

.green
  @extend $green_skeu_chain
  border-right 1px solid #555
  &:hover
    @extend $green_skeu_chain_hover
  &:active
    @extend $green_skeu_active

.blue
  @extend $blue_skeu_chain
  border-right 1px solid #555
  &:hover
    @extend $blue_skeu_chain_hover
  &:active
    @extend $blue_skeu_active

.red
  @extend $red_skeu_chain_l
  &:hover
    @extend $red_skeu_chain_l_hover
  &:active
    @extend $red_skeu_active

.skeu
  display inline-block
  size auto auto
  font-size 30px
  line-height 35px
  font-weight 100
  padding 15px 45px
  margin 10px 0
  font-family "Helvetica Neue", sans-serif
