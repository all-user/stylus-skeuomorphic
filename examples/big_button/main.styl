@import '../_import_theme/purple.styl'
@import '../../stylus/skeu.styl'

$params = gen-purple-theme()
$params.material.texture.src = '../../images/pattern.png'

stylus-skeuomorphic($params)

body-attrs = skeu-purple.bg_color
body
  { body-attrs }


isolate-normal =  skeu-purple.isolate.normal
isolate-hover =  skeu-purple.isolate.hover
isolate-active =  skeu-purple.isolate.active

.fig-01
  { isolate-normal }
  font-size 50px
  font-family 'League Script', cursive
  font-weight normal
  letter-spacing .1em
  text-align center
  padding 30px 50px
  box-sizing border-box
  display inline-block
  size auto auto
  margin 150px 0
  &:hover
    { isolate-hover }
  &:active
    { isolate-active }

